{
  "name": "avocado-js",
  "version": "1.0.0",
  "description": "",
  "homepage": "",
  "author": "",
  "license": "MIT",
  "files": [
    "bin/",
    "config/",
    "dist/",
    "lab",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "build-and-test": "jest",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "rimraf ./dist",
    "github-release": "node ./scripts/create-github-release.js",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json",
    "nightly": "npm run build && node ./scripts/publish-nightly.js",
    "test": "jest",
    "watch": "npm run clean && tsc --watch & npm run sass-watch"
  },
  "main": "dist/index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.10",
    "rimraf": "^2.6.1",
    "tslint-ionic-rules": "0.0.8",
    "typescript": "~2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/driftyco/avocado-js.git"
  },
  "bugs": {
    "url": "https://github.com/driftyco/avocado-js/issues"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/ionic-cz-conventional-changelog"
    }
  },
  "typings": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|js)$",
    "coverageDirectory": "coverage"
  }
}
